{
  "id": "role-and-roll",
  "title": "Role & Roll",
  "description": "Easy to play | TRPG from Thailand by BGN Squad",
  "version": "1.0.6",
  "compatibility": {
    "minimum": "12",
    "verified": "13"
  },

  "url": "https://github.com/nephele-interactive/role-and-roll",
  "manifest": "https://raw.githubusercontent.com/nephele-interactive/role-and-roll/main/system.json",
  "download": "https://github.com/nephele-interactive/role-and-roll/releases/download/v1.0.6/role-and-roll-v1.0.6.zip",

  "authors": [
    {
      "name": "Nephele Interactive",
      "flags": {}
    },
    {
      "name": "BGN Squad",
      "flags": {}
    }
  ],

  "esmodules": [
    "module/role-and-roll.mjs"
  ],
  "styles": [
    "styles/role-and-roll.css"
  ],

  "documentTypes": {
    "Actor": {
      "character": {
        "label": "Character",
        "htmlFields": [
          "system.details.biography"
        ]
      },
      "npc": {
        "label": "NPC",
        "htmlFields": [
          "system.details.biography"
        ]
      }
    },
    "Item": {
      "ability": {
        "label": "Ability",
        "htmlFields": [
          "system.description"
        ]
      },
      "equipment": {
        "label": "Equipment",
        "htmlFields": [
          "system.description"
        ]
      },
      "skill": {
        "label": "Skill",
        "htmlFields": [
          "system.description"
        ]
      }
    },
    "JournalEntryPage": {
      "rule": {
        "label": "Rule",
        "htmlFields": [
          "text.content"
        ]
      }
    }
  },

  "packs": [
    {
      "name": "rnr-characters",
      "label": "Role & Roll Sample Characters",
      "system": "role-and-roll",
      "path": "packs/characters",
      "type": "Actor",
      "private": false
    },
    {
      "name": "rnr-items",
      "label": "Role & Roll Items",
      "system": "role-and-roll",
      "path": "packs/items",
      "type": "Item",
      "private": false
    },
    {
      "name": "rnr-rules",
      "label": "Role & Roll Rules",
      "system": "role-and-roll",
      "path": "packs/rules",
      "type": "JournalEntry",
      "private": false
    }
  ],

  "packFolders": [
    {
      "name": "Role & Roll",
      "sorting": "m",
      "color": "#f97316",
      "packs": [
        "rnr-characters",
        "rnr-items",
        "rnr-rules"
      ]
    }
  ],

  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json",
      "flags": {}
    }
  ],

  "media": [
    {
      "type": "cover",
      "loop": false,
      "flags": {}
    },
    {
      "type": "setup",
      "url": "systems/role-and-roll/ui/official/rnr-thumbnail.jpg",
      "thumbnail": "systems/role-and-roll/ui/official/rnr-thumbnail.jpg"
    }
  ],

  "socket": true,

  "grid": {
    "distance": 5,
    "units": "m"
  },

  "primaryTokenAttribute": "system.health",
  "secondaryTokenAttribute": "system.mental",

  "background": "systems/role-and-roll/ui/official/rnr-thumbnail.jpg",

  "flags": {
    "role-and-roll": {
      "sourceBooks": {
        "Core Rules": "SOURCE.BOOK.CORE"
      }
    },
    "needsMigrationVersion": "1.0.0",
    "compatibleMigrationVersion": "1.0",
    "hotReload": false
  },

  "license": "LICENSE.txt"
}
