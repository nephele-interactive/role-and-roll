<form class="{{cssClass}}" autocomplete="off">

  <!-- HEADER -->
  <header class="sheet-header role-header">
    <div class="profile-img-container">
      <div class="profile-img-frame">
        <img class="profile-img preview-only" src="{{actor.img}}" title="{{actor.name}}" />

        <!-- hidden real editor (required by Foundry) -->
        <img class="hidden-img-editor" data-edit="img" src="{{actor.img}}" style="display:none" />
      </div>

      <button type="button" class="profile-img-edit-btn">
        <i class="fas fa-pencil-alt"></i>
      </button>
    </div>
    </div>

    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{actor.name}}"
          placeholder="{{localize 'ROLEANDROLL.Labels.CharacterName'}}" />
      </h1>

      <div class="resources">
        <div class="resource">
          <label>{{localize "ROLEANDROLL.Labels.Health"}}</label>
          <input type="number" name="system.health.value" value="{{system.health.value}}" />
          <span>/</span>
          <input type="number" name="system.health.max" value="{{system.health.max}}" readonly />
        </div>

        <div class="resource">
          <label>{{localize "ROLEANDROLL.Labels.Mental"}}</label>
          <input type="number" name="system.mental.value" value="{{system.mental.value}}" />
          <span>/</span>
          <input type="number" name="system.mental.max" value="{{system.mental.max}}" />
        </div>

        <div class="resource">
          <label>{{localize "ROLEANDROLL.Labels.Level"}}</label>
          <input type="number" name="system.level" value="{{system.level}}" />
        </div>

        <div class="resource">
          <label>{{localize "ROLEANDROLL.Labels.Exp"}}</label>
          <input type="number" name="system.exp" value="{{system.exp}}" />
        </div>

        <div class="resource">
          <label>{{localize "ROLEANDROLL.Labels.WillPower"}}</label>
          <input type="number" name="system.wp.value" value="{{system.wp.value}}" min="0" max="{{system.wp.max}}" />
          <span>/</span>
          <input type="number" name="system.wp.max" value="{{system.wp.max}}" readonly />
        </div>

        <div class="resource">
          <label>{{localize "ROLEANDROLL.Labels.Defense"}}</label>
          <input type="number" name="system.defense" value="{{system.defense}}" />
        </div>
      </div>

    </div>
  </header>

  {{!-- Navigation Tabs --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="attributes">{{localize "ROLEANDROLL.Tabs.Attributes"}}</a>
    <a class="item" data-tab="abilities">{{localize "ROLEANDROLL.Tabs.Abilities"}}</a>
    <a class="item" data-tab="skills">{{localize "ROLEANDROLL.Tabs.Skills"}}</a>
    <a class="item" data-tab="equipment">{{localize "ROLEANDROLL.Tabs.Equipment"}}</a>
    <a class="item" data-tab="bio">{{localize "ROLEANDROLL.Tabs.Bio"}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">

      {{!-- Body Category --}}
      <div class="ability-category">
        <h3>{{localize "ROLEANDROLL.AttributeCategories.body"}}</h3>
        <div class="attributes-grid">
          {{#each system.attributes as |attr key|}}
          {{#if (or (eq key "strength") (eq key "dexterity") (eq key "toughness"))}}
          <div class="attribute">
            <label>
              <div class="label-main">{{localize (concat "ROLEANDROLL.Attributes." key)}}</div>
              {{#with (showEn (concat "ROLEANDROLL.Attributes." key)) as |en|}}
              {{#if en}}
              <div class="label-subtitle">{{en}}</div>
              {{/if}}
              {{/with}}
            </label>
            <div class="dice-pips">
              {{#each (range 1 6) as |pip|}}
              <button type="button" class="pip {{#if (lte pip attr.dice)}}filled{{/if}}" data-action="set-dice"
                data-target="attributes.{{key}}.dice" data-value="{{pip}}">
                ●
              </button>
              {{/each}}
            </div>
            <div class="succeed-check">
              <input type="checkbox" name="system.attributes.{{key}}.succeed" {{checked attr.succeed}} />
              <label>{{localize "ROLEANDROLL.Labels.Succeed"}}</label>
            </div>
            <button type="button" class="attribute-roll" data-attribute="{{key}}">
              {{localize "ROLEANDROLL.Labels.Roll"}}
            </button>
          </div>
          {{/if}}
          {{/each}}
        </div>
      </div>

      {{!-- Intelligence & Emotion Category --}}
      <div class="ability-category">
        <h3>{{localize "ROLEANDROLL.AttributeCategories.intelligenceEmotion"}}</h3>
        <div class="attributes-grid">
          {{#each system.attributes as |attr key|}}
          {{#if (or (eq key "intellect") (eq key "aptitude") (eq key "sanity"))}}
          <div class="attribute">
            <label>
              <div class="label-main">{{localize (concat "ROLEANDROLL.Attributes." key)}}</div>
              {{#with (showEn (concat "ROLEANDROLL.Attributes." key)) as |en|}}
              {{#if en}}
              <div class="label-subtitle">{{en}}</div>
              {{/if}}
              {{/with}}
            </label>
            <div class="dice-pips">
              {{#each (range 1 6) as |pip|}}
              <button type="button" class="pip {{#if (lte pip attr.dice)}}filled{{/if}}" data-action="set-dice"
                data-target="attributes.{{key}}.dice" data-value="{{pip}}">
                ●
              </button>
              {{/each}}
            </div>
            <div class="succeed-check">
              <input type="checkbox" name="system.attributes.{{key}}.succeed" {{checked attr.succeed}} />
              <label>{{localize "ROLEANDROLL.Labels.Succeed"}}</label>
            </div>
            <button type="button" class="attribute-roll" data-attribute="{{key}}">
              {{localize "ROLEANDROLL.Labels.Roll"}}
            </button>
          </div>
          {{/if}}
          {{/each}}
        </div>
      </div>

      {{!-- Personality Category --}}
      <div class="ability-category">
        <h3>{{localize "ROLEANDROLL.AttributeCategories.personality"}}</h3>
        <div class="attributes-grid">
          {{#each system.attributes as |attr key|}}
          {{#if (or (eq key "charm") (eq key "rhetoric") (eq key "ego"))}}
          <div class="attribute">
            <label>
              <div class="label-main">{{localize (concat "ROLEANDROLL.Attributes." key)}}</div>
              {{#with (showEn (concat "ROLEANDROLL.Attributes." key)) as |en|}}
              {{#if en}}
              <div class="label-subtitle">{{en}}</div>
              {{/if}}
              {{/with}}
            </label>
            <div class="dice-pips">
              {{#each (range 1 6) as |pip|}}
              <button type="button" class="pip {{#if (lte pip attr.dice)}}filled{{/if}}" data-action="set-dice"
                data-target="attributes.{{key}}.dice" data-value="{{pip}}">
                ●
              </button>
              {{/each}}
            </div>
            <div class="succeed-check">
              <input type="checkbox" name="system.attributes.{{key}}.succeed" {{checked attr.succeed}} />
              <label>{{localize "ROLEANDROLL.Labels.Succeed"}}</label>
            </div>
            <button type="button" class="attribute-roll" data-attribute="{{key}}">
              {{localize "ROLEANDROLL.Labels.Roll"}}
            </button>
          </div>
          {{/if}}
          {{/each}}
        </div>
      </div>

    </div>

    {{!-- Abilities Tab --}}
    <div class="tab abilities" data-group="primary" data-tab="abilities">
      {{#each system.abilities as |category catKey|}}
      <div class="ability-category">
        <h3>{{localize (concat "ROLEANDROLL.AbilityCategories." catKey)}}</h3>
        <div class="abilities-grid">
          {{#each category as |value abilityKey|}}
          <div class="ability">
            <label>
              <div class="label-main">{{localize (concat "ROLEANDROLL.Abilities." abilityKey)}}{{formatAbilityAttributes
                value}}</div>
              {{#with (showEn (concat "ROLEANDROLL.Abilities." abilityKey)) as |en|}}
              {{#if en}}
              <div class="label-subtitle">{{en}}</div>
              {{/if}}
              {{/with}}
            </label>
            <div class="dice-pips">
              {{#each (range 1 6) as |pip|}}
              <button type="button" class="pip {{#if (lte pip value.dice)}}filled{{/if}}" data-action="set-dice"
                data-target="abilities.{{catKey}}.{{abilityKey}}.dice" data-value="{{pip}}">
                ●
              </button>
              {{/each}}
            </div>
            <div class="succeed-check">
              <input type="checkbox" name="system.abilities.{{catKey}}.{{abilityKey}}.succeed" {{checked
                value.succeed}} />
              <label>{{localize "ROLEANDROLL.Labels.Succeed"}}</label>
            </div>
            <button type="button" class="ability-roll" data-category="{{catKey}}" data-ability="{{abilityKey}}">
              {{localize "ROLEANDROLL.Labels.Roll"}}
            </button>
          </div>
          {{/each}}
        </div>
      </div>
      {{/each}}
    </div>

    {{!-- Skills Tab --}}
    <div class="tab skills" data-group="primary" data-tab="skills">
      <button type="button" class="item-create" data-type="skill">
        <i class="fas fa-plus"></i> {{localize "ROLEANDROLL.Labels.AddSkill"}}
      </button>
      <ol class="items-list">
        {{#each skills as |skill index|}}
        <li class="item skill-item-simple" data-index="{{index}}">
          <div class="skill-content">
            <input type="text" class="skill-name" name="system.skills.{{index}}.name" value="{{skill.name}}"
              placeholder="{{localize 'ROLEANDROLL.Labels.SkillName'}}" />

            <textarea class="skill-description" name="system.skills.{{index}}.description"
              placeholder="{{localize 'ROLEANDROLL.Labels.Description'}}" rows="2">{{skill.description}}</textarea>

            <div class="skill-actions">
              <button type="button" class="skill-show-btn" data-index="{{index}}">
                <i class="fas fa-comment"></i> {{localize "ROLEANDROLL.Labels.ShowInChat"}}
              </button>
              <button type="button" class="item-delete" data-index="{{index}}">
                <i class="fas fa-trash"></i>
              </button>
            </div>
          </div>
        </li>
        {{/each}}
      </ol>
    </div>

    {{!-- Equipment Tab --}}
    <div class="tab equipment" data-group="primary" data-tab="equipment">
      <button type="button" class="item-create" data-type="equipment">
        <i class="fas fa-plus"></i> {{localize "ROLEANDROLL.Labels.AddEquipment"}}
      </button>
      <ol class="items-list equipment-list">
        {{#each items as |item|}}
        {{#if (eq item.type "equipment")}}
        <li class="item equipment-item-card" data-item-id="{{item._id}}">
          <div class="item-header">
            <img class="item-img" src="{{item.img}}" alt="{{item.name}}" data-item-id="{{item._id}}" />
            <div class="item-title-section">
              <h4 class="item-name">{{item.name}}</h4>
              <div class="item-properties">
                <div class="item-weight-input">
                  <label>{{localize "ROLEANDROLL.Labels.Weight"}}:</label>
                  <input type="number" class="weight-input" data-item-id="{{item._id}}" value="{{item.system.weight}}"
                    step="0.1" />
                </div>
                <span class="item-quantity-display">{{localize "ROLEANDROLL.Labels.Quantity"}}:
                  {{item.system.quantity}}</span>
              </div>
            </div>
            <div class="item-header-controls">
              <a class="item-control item-show-chat" data-item-id="{{item._id}}"
                title="{{localize 'ROLEANDROLL.Labels.ShowInChat'}}">
                <i class="fas fa-comment"></i>
              </a>
              <a class="item-control item-edit" title="{{localize 'ROLEANDROLL.Labels.Edit'}}">
                <i class="fas fa-edit"></i>
              </a>
              <a class="item-control item-delete" title="{{localize 'ROLEANDROLL.Labels.Delete'}}">
                <i class="fas fa-trash"></i>
              </a>
            </div>
          </div>
          <div class="item-footer">
            <div class="item-quantity-controls">
              <button type="button" class="quantity-btn decrease" data-item-id="{{item._id}}"
                data-action="decrease-qty">−</button>
              <span class="quantity-value">{{item.system.quantity}}</span>
              <button type="button" class="quantity-btn increase" data-item-id="{{item._id}}"
                data-action="increase-qty">+</button>
            </div>
          </div>
        </li>
        {{/if}}
        {{/each}}
      </ol>
    </div>

    {{!-- Bio Tab --}}
    <div class="tab bio" data-group="primary" data-tab="bio">
      <div class="bio-grid">
        <div class="bio-field bio-image">
          <div class="ability-category">
            <h3>{{localize "ROLEANDROLL.Bio.Biography"}}</h3>
          </div>
          <textarea name="system.biography" rows="10">{{system.biography}}</textarea>
        </div>

        <div class="bio-right-column">
          <div class="bio-field">
            <div class="ability-category">
              <h3>{{localize "ROLEANDROLL.Bio.SourceOfWillPower"}}</h3>
            </div>
            <textarea name="system.sourceOfWillPower" rows="3">{{system.sourceOfWillPower}}</textarea>
          </div>

          <div class="bio-field-row">
            <div class="bio-field">
              <div class="ability-category">
                <h3>{{localize "ROLEANDROLL.Bio.Buff"}}</h3>
              </div>
              <textarea name="system.buff" rows="6">{{system.buff}}</textarea>
            </div>
            <div class="bio-field">
              <div class="ability-category">
                <h3>{{localize "ROLEANDROLL.Bio.Debuff"}}</h3>
              </div>
              <textarea name="system.debuff" rows="6">{{system.debuff}}</textarea>
            </div>
          </div>
        </div>

        <div class="bio-field-row bio-bottom-row">
          <div class="bio-field">
            <div class="ability-category">
              <h3>{{localize "ROLEANDROLL.Bio.Injuries"}}</h3>
            </div>
            <textarea name="system.injuries" rows="5">{{system.injuries}}</textarea>
          </div>
          <div class="bio-field">
            <div class="ability-category">
              <h3>{{localize "ROLEANDROLL.Bio.Flaw"}}</h3>
            </div>
            <textarea name="system.flaw" rows="5">{{system.flaw}}</textarea>
          </div>
          <div class="bio-field">
            <div class="ability-category">
              <h3>{{localize "ROLEANDROLL.Bio.PsychiatricDisorder"}}</h3>
            </div>
            <textarea name="system.psychiatricDisorder" rows="5">{{system.psychiatricDisorder}}</textarea>
          </div>
        </div>
      </div>
    </div>

  </section>
</form>